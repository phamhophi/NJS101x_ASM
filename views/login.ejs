<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="./css/form.css">
</head>

<body>
  <%- include('./includes/navigation.ejs') %>
  <main>
    <% if (errorMessage) { %>
    <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <form class="g-form" action="/login" method="post">
      <div class="form-control">
        <label for="username">Tên đăng nhập</label>
        <input class="<%= validationErrors.find(e=> e.param === 'username')?'invalid' : '' %>" type="text" id="username"
          name="username" value="<%= oldInput.username %>">
      </div>
      <div class="form-control">
        <label for="password">Mật khẩu</label>
        <input class="<%= validationErrors.find(e=> e.param === 'password')?'invalid' : '' %>" type="password"
          id="password" name="password" value="<%= oldInput.password %>">
      </div>
      <button class="btn" type="submit">Submit</button>
    </form>
  </main>
  <%- include('./includes/end.ejs') %>